
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="job-listing-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <form class="search-job">
                    <div class="row">
                        <div class="col-lg-5">
                            <div class="rated">
                                <select class="pb-3 float-none">
                                    <option selected>Tüm şehirler</option>
                                    <option value="1">En yeni</option>
                                    <option value="3">En yakın</option>
                                    <option value="2">En çok teklif alan</option>
                                    <option value="3">En çok görüntülenen</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <select class="pb-3 float-none">
                                    <option selected>Tüm kategoriler</option>
                                    <option value="1">En yeni</option>
                                    <option value="3">En yakın</option>
                                    <option value="2">En çok teklif alan</option>
                                    <option value="3">En çok görüntülenen</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <button type="button" onclick="ClickIt()" class="default-btn">
                                <i class="bx bx-search"></i>
                                İlan ara
                            </button>
                        </div>
                    </div>
                </form>
                <div class="time-and-hour">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="rated">
                                <p>Şuna göre sırala : </p>
                                <select>
                                    <option selected>Varsayılan</option>
                                    <option value="1">En yeni</option>
                                    <option value="3">En yakın</option>
                                    <option value="2">En çok teklif alan</option>
                                    <option value="3">En çok görüntülenen</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-5 offset-lg-1">
                            <div class="rated">
                                <p class="">İlan tarihi : </p>
                                <select>
                                    <option selected>Tüm zamanlar</option>
                                    <option value="1">Son 1 saat</option>
                                    <option value="3">Son 1 gün</option>
                                    <option value="2">Son 1 hafta</option>
                                    <option value="3">Son 1 ay</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                @for (int i = 0; i < 10; i++)
                {
                    <div class="hot-jobs-list">
                        <div class="row align-items-center">
                            <div class="col-lg-2">
                                <a href="job-details.html" class="hot-jobs-img">
                                    <img src="~/telefon.jpg" alt="Image">
                                </a>
                            </div>
                            <div class="col-lg-6">
                                <div class="hot-jobs-content">
                                    <h3><a href="job-details.html">Elektronik</a></h3>
                                    <span class="sub-title">Nokia 7610 Cep Telefonu</span>
                                    <ul>
                                        <li><span>İlan Sahibi:</span>  H... T... (8.8 TP).</li>
                                        <li><span>Teklifler: </span>3</li>
                                        <li><span>Konum: </span>Çankaya/Ankara</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="hot-jobs-btn">
                                    <a href="/ilan-detayi" class="default-btn">İlan Detayı</a>
                                    <p><span>İlan Tarihi: </span>3 Eylül 2021</p>
                                </div>
                            </div>
                        </div>
                        <span class="featured">TP 8.8/10</span>
                    </div>
                }
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="pagination-area">
                            <span class="page-numbers current" aria-current="page">1</span>
                            <a href="#" class="page-numbers">2</a>
                            <a href="#" class="page-numbers">3</a>
                            <a href="#" class="next page-numbers">
                                <i class="flaticon-right-arrow"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{ 

}