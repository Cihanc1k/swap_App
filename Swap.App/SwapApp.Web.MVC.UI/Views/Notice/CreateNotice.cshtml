
@{
    ViewData["Title"] = "CreateNotice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link href="~/summernote-0.8.18-dist/summernote-lite.css" rel="stylesheet" />
}

<section class="job-information-area ptb-100">
    <div class="container">
        <div class="job-information">
            <h3>İlan Bilgileri</h3>
            <form class="w-100">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>İlan başlığı*</label>
                            <input class="form-control" type="text" name="title">
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="form-group">
                            <label>Kategori*</label>
                            <select>
                                <option value="1">UX/UI Designer</option>
                                <option value="2">Web Developer</option>
                                <option value="3">Web Designer</option>
                                <option value="4">Software Developer</option>
                                <option value="5">SEO</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label>İl*</label>
                            <select>
                                <option value="1">Full Time</option>
                                <option value="2">Part Time</option>
                                <option value="3">Contract</option>
                                <option value="4">Internship</option>
                                <option value="5">Office</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label>İlçe*</label>
                            <select>
                                <option value="1">Full Time</option>
                                <option value="2">Part Time</option>
                                <option value="3">Contract</option>
                                <option value="4">Internship</option>
                                <option value="5">Office</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label>İlan Detayı*</label>
                            <textarea rows="50" id="summernote" name="editordata"></textarea>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label>Kapak Resmi*</label>
                            <input type="file" class="form-control-file" />
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group">
                            <label>Resimler*</label>
                            <input type="file" multiple class="form-control-file" />
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group">
                            <button type="submit" class="btn-block default-btn btn-two">İlanı Yayınla</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/summernote-0.8.18-dist/summernote-lite.js"></script>
    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
                height: 450
            });
        });
    </script>
}